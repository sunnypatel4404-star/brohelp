{
  "name": "wordpress-ai-agent",
  "version": "1.0.0",
  "description": "Automated article generation and posting to WordPress using ChatGPT with React dashboard",
  "main": "dist/backend/index.js",
  "scripts": {
    "dev:backend": "ts-node src/backend/index.ts",
    "dev:frontend": "vite",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "build:backend": "tsc -p tsconfig.backend.json",
    "build:frontend": "tsc -b tsconfig.frontend.json && vite build",
    "build": "npm run build:backend && npm run build:frontend",
    "start": "node dist/backend/index.js",
    "preview": "vite preview",
    "lint": "eslint src/frontend",
    "api": "ts-node src/backend/server/apiServer.ts",
    "generate-article": "ts-node src/backend/commands/generateArticle.ts",
    "generate-image": "ts-node src/backend/commands/generateImage.ts",
    "generate-pins": "ts-node src/backend/commands/generatePins.ts",
    "review-pins": "ts-node src/backend/commands/reviewPins.ts",
    "publish-draft": "ts-node src/backend/commands/publishDraft.ts",
    "dashboard": "ts-node src/backend/commands/dashboard.ts",
    "server": "ts-node src/backend/commands/server.ts",
    "migrate-db": "ts-node src/backend/database/migrate.ts"
  },
  "keywords": [
    "wordpress",
    "chatgpt",
    "automation",
    "react",
    "dashboard"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.13.2",
    "better-sqlite3": "^12.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "openai": "^4.20.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-router-dom": "^7.9.6",
    "sharp": "^0.34.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/better-sqlite3": "^7.6.13",
    "@types/cors": "^2.8.14",
    "@types/express": "^4.17.17",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "autoprefixer": "^10.4.22",
    "concurrently": "^8.2.2",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.18",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.4",
    "vite": "^7.2.4"
  }
}
